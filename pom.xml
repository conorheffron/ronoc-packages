<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/SETTINGS/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <profiles>
        <profile>
            <id>allow-snapshots</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <url>https://maven.pkg.github.com/conorheffron/*</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <modelVersion>4.0.0</modelVersion>

    <groupId>ie.ronoc.packages</groupId>
    <artifactId>ronoc-packages</artifactId>
    <version>4.1-RELEASE</version>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>github</id>
            <name>GitHub conorheffron Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/conorheffron/*</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>redis-tester</groupId>
            <artifactId>redis-cache-tester</artifactId>
            <version>2.5.0-RELEASE</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>elastic-tester</groupId>
            <artifactId>elastic-search-tester</artifactId>
            <version>2.8.0-RELEASE</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>cron-job-sample</groupId>
            <artifactId>cron-job-sample-spring</artifactId>
            <version>3.1.0-RELEASE</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>rabbitmq-tester</groupId>
            <artifactId>rabbitmq-pub-cons-tester</artifactId>
            <version>2.5.0-RELEASE</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>

</project>
